#!/usr/bin/env bash
# -*- bash -*-
#
#
set -u -e -o pipefail

if [[ -f "specs/$@.rb" ]]; then
  files="specs/$@.rb"
  shift
else
  files="$(echo -n specs/*.rb | tr ' ' '\n' | sort)"
fi

if [[ -z "$files" ]]; then
  colorize yellow "No tests found." 1>&2
  exit 0
else
  bundle exec bacon specs/lib/helpers.rb $files "$@"
fi
